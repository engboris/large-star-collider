''''
Syntax of Stellogen programs
''''

'definition of constellation
x = { +a; -a b; }
y = x
z = {
	-f(X);
}

'show (literal) contellations
show { a; b; c; }

'print result of execution
print { a; b; c; }

'specifications
spec sp =
	test1 -> { +f(a) ok; }
	test2 -> { +f(b) ok; }
end

'testing
orth = { -test?(ok) ok; }
test z : sp with orth
'test x : sp with orth 'causes type error

'access to test of some specification
show sp.test1
show sp.test2
